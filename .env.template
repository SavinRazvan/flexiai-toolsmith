# ============================================================================================ #
#                                      OpenAI Configuration                                    #
# ============================================================================================ #
# Full Assistant API support (threads, tools, etc)
# API Key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_api_key

# Assistant API version (Required for thread management)
OPENAI_ASSISTANT_VERSION=v2

# API version (YYYY-MM-DD format)
OPENAI_API_VERSION=2023-11-22

# Organization ID (optional for team management)
OPENAI_ORGANIZATION_ID=org-your_org_id

# Project ID (optional for resource grouping)
OPENAI_PROJECT_ID=proj_your_project_id


# ============================================================================================ #
#                                      Azure OpenAI Configuration                              #
# ============================================================================================ #
# Full Assistant API support (threads, tools, etc)
# Azure Portal: https://portal.azure.com
AZURE_OPENAI_API_KEY=azure_your_api_key
AZURE_OPENAI_ENDPOINT=https://your-azure-endpoint.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-05-01-preview


# ============================================================================================ #
#                                      DeepSeek Configuration                                  #
# ============================================================================================ #
# Basic chat completions only - No Assistant API support
# API Docs: https://platform.deepseek.com/api
DEEPSEEK_API_KEY=sk-proj-your_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_API_VERSION=2023-11-22


# ============================================================================================ #
#                                      Qwen Configuration                                      #
# ============================================================================================ #
# Basic chat completions only - No Assistant API support
# Requires custom implementation for advanced features
QWEN_API_KEY=sk-proj-your_api_key
QWEN_BASE_URL=https://dashscope.aliyun.com/compatible-mode/v1
QWEN_API_VERSION=2023-11-22


# ============================================================================================ #
#                                 GitHub Azure Inference Configuration                        #
# ============================================================================================ #
# GitHub PAT: https://github.com/settings/tokens (did some experiments, at this moment is on pause)
# DOCS: https://docs.github.com/en/authentication/keeping-your-account-and-data-secure/managing-your-personal-access-tokens
GITHUB_TOKEN=github_pat-your_personal_access_token

# Custom endpoint for Azure-hosted models
GITHUB_AZURE_INFERENCE_ENDPOINT=https://models.inference.ai.azure.com


# ============================================================================================ #
#                                      YouTube Configuration                                   #
# ============================================================================================ #
# YouTube Data API: https://console.cloud.google.com/apis/dashboard   (you need it to render youtube videos in chat)
YOUTUBE_API_KEY=your_api_key


# ============================================================================================ #
#                                      General Configuration                                   #
# ============================================================================================ #
# Provider Note: Assistant features (threads/tools) only work with OpenAI
# Options: openai, azure, deepseek, qwen, github_azure_inference
CREDENTIAL_TYPE=openai

# Project root directory (absolute path required)
USER_PROJECT_ROOT_DIR=/your/path/to/your_root_project

# Communication channels (Assistant API works best with CLI)
# Options: cli, quart, redis
ACTIVE_CHANNELS=cli
